---
interface Props {
  title?: string;
}

const { title = 'Resources & Further Reading' } = Astro.props;
---

<aside class="resources my-8 p-5 bg-muted/50 border border-border rounded-sm">
  <div class="flex items-center gap-2 mb-4">
    <svg class="w-5 h-5 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
    </svg>
    <h4 class="font-semibold text-foreground text-sm">{title}</h4>
  </div>
  <div class="resources-content text-sm">
    <slot />
  </div>
</aside>

<style>
  .resources-content :global(ul) {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .resources-content :global(li) {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.5rem;
    color: theme('colors.muted.foreground');
  }

  .resources-content :global(li)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6rem;
    width: 4px;
    height: 4px;
    background: theme('colors.border');
    border-radius: 50%;
  }

  .resources-content :global(li:last-child) {
    margin-bottom: 0;
  }

  .resources-content :global(a) {
    color: theme('colors.primary.DEFAULT');
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .resources-content :global(a:hover) {
    opacity: 0.8;
    text-decoration: underline;
  }
</style>
