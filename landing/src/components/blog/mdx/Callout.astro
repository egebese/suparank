---
interface Props {
  type?: 'info' | 'tip' | 'warning' | 'danger';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const config = {
  info: {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    borderColor: 'border-blue-500/50',
    bgColor: 'bg-blue-500/5',
    iconColor: 'text-blue-400',
    defaultTitle: 'Note',
  },
  tip: {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>`,
    borderColor: 'border-green-500/50',
    bgColor: 'bg-green-500/5',
    iconColor: 'text-green-400',
    defaultTitle: 'Pro Tip',
  },
  warning: {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`,
    borderColor: 'border-yellow-500/50',
    bgColor: 'bg-yellow-500/5',
    iconColor: 'text-yellow-400',
    defaultTitle: 'Warning',
  },
  danger: {
    icon: `<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    borderColor: 'border-red-500/50',
    bgColor: 'bg-red-500/5',
    iconColor: 'text-red-400',
    defaultTitle: 'Important',
  },
};

const currentConfig = config[type];
const displayTitle = title || currentConfig.defaultTitle;
---

<aside
  class:list={[
    'callout my-6 p-4 border-l-4 rounded-sm',
    currentConfig.borderColor,
    currentConfig.bgColor,
  ]}
  role="note"
>
  <div class="flex items-start gap-3">
    <span class:list={['flex-shrink-0 mt-0.5', currentConfig.iconColor]} set:html={currentConfig.icon} />
    <div class="flex-1 min-w-0">
      {displayTitle && (
        <p class="font-semibold text-foreground mb-1">{displayTitle}</p>
      )}
      <div class="text-muted-foreground text-sm leading-relaxed prose-p:my-1">
        <slot />
      </div>
    </div>
  </div>
</aside>
