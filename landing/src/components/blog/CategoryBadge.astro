---
import type { CategoryKey } from '../../content/config';
import { categories } from '../../content/config';

interface Props {
  category: CategoryKey;
  href?: string;
  size?: 'sm' | 'md';
}

const { category, href, size = 'sm' } = Astro.props;
const categoryMeta = categories[category];

const sizeClasses = {
  sm: 'text-[10px] px-2 py-0.5',
  md: 'text-xs px-2.5 py-1',
};

const Tag = href ? 'a' : 'span';
---

<Tag
  href={href}
  class:list={[
    'inline-flex items-center font-medium uppercase tracking-wider border border-border rounded-sm',
    'transition-colors duration-200',
    sizeClasses[size],
    href && 'hover:bg-muted hover:border-muted-foreground/30',
  ]}
  style={`color: ${categoryMeta.color.from};`}
>
  {categoryMeta.name}
</Tag>

<style>
  a:hover {
    text-decoration: none;
  }
</style>
