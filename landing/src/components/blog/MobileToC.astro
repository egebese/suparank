---
interface Heading {
  depth: number;
  text: string;
  slug: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <div class="mobile-toc lg:hidden sticky top-16 z-40 bg-background/95 backdrop-blur-sm border-b border-border -mx-4 px-4 py-3">
    <details class="group">
      <summary class="flex items-center justify-between cursor-pointer list-none">
        <span class="text-sm font-medium text-foreground">Jump to section</span>
        <svg
          class="w-4 h-4 text-muted-foreground transition-transform group-open:rotate-180"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </summary>

      <nav class="mt-3 pb-1" aria-label="Table of contents">
        <ul class="space-y-1">
          {filteredHeadings.map((heading) => (
            <li>
              <a
                href={`#${heading.slug}`}
                class:list={[
                  'mobile-toc-link block py-2 text-sm text-muted-foreground hover:text-foreground transition-colors',
                  heading.depth === 3 && 'pl-4',
                ]}
                data-slug={heading.slug}
              >
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </details>
  </div>
)}

<script>
  // Close mobile ToC when a link is clicked
  document.addEventListener('DOMContentLoaded', () => {
    const mobileToC = document.querySelector('.mobile-toc details');
    const tocLinks = document.querySelectorAll('.mobile-toc-link');

    tocLinks.forEach((link) => {
      link.addEventListener('click', () => {
        if (mobileToC) {
          mobileToC.removeAttribute('open');
        }
      });
    });
  });
</script>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }

  .mobile-toc-link {
    min-height: 44px;
    display: flex;
    align-items: center;
  }
</style>
