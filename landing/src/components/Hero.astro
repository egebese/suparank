<section class="pt-24 md:pt-32 pb-16 md:pb-20 relative overflow-hidden section-divider">
  <!-- Ethereal Shadow Background -->
  <div class="absolute inset-0 z-0 opacity-40" id="ethereal-bg">
    <svg class="absolute" style="width: 0; height: 0;">
      <defs>
        <filter id="ethereal-filter">
          <feTurbulence
            id="turbulence"
            result="undulation"
            numOctaves="2"
            baseFrequency="0.0003,0.002"
            seed="0"
            type="turbulence"
          />
          <feColorMatrix
            id="hue-rotate"
            in="undulation"
            type="hueRotate"
            values="0"
          />
          <feColorMatrix
            in="dist"
            result="circulation"
            type="matrix"
            values="4 0 0 0 1  4 0 0 0 1  4 0 0 0 1  1 0 0 0 0"
          />
          <feDisplacementMap
            in="SourceGraphic"
            in2="circulation"
            scale="60"
            result="dist"
          />
          <feDisplacementMap
            in="dist"
            in2="undulation"
            scale="60"
            result="output"
          />
        </filter>
      </defs>
    </svg>
    <div
      id="ethereal-layer"
      class="absolute inset-0 md:-inset-20"
      style="filter: url(#ethereal-filter) blur(4px);"
    >
      <div
        class="w-full h-full"
        style="
          background: linear-gradient(135deg, #C86CC2 0%, #681C64 50%, #C86CC2 100%);
          mask-image: url('https://framerusercontent.com/images/ceBGguIpUU8luwByxuQz79t7To.png');
          -webkit-mask-image: url('https://framerusercontent.com/images/ceBGguIpUU8luwByxuQz79t7To.png');
          mask-size: cover;
          -webkit-mask-size: cover;
          mask-position: center;
          -webkit-mask-position: center;
          mask-repeat: no-repeat;
          -webkit-mask-repeat: no-repeat;
        "
      ></div>
    </div>
    <!-- Noise overlay -->
    <div
      class="absolute inset-0 opacity-30"
      style="
        background-image: url('https://framerusercontent.com/images/g0QcWrxr87K0ufOxIUFBakwYA8.png');
        background-size: 240px;
        background-repeat: repeat;
      "
    ></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      <!-- Left Column: Content -->
      <div>
        <!-- Badge -->
        <div class="flex items-center gap-3 mb-6 md:mb-8">
          <span class="inline-flex items-center gap-2 px-3 py-1 text-xs font-medium bg-muted text-muted-foreground border border-border">
            Now with 19 MCP tools
            <a href="#features" class="text-foreground hover:underline inline-flex items-center gap-1">
              Learn more
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </span>
        </div>

        <!-- Headline -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-semibold text-foreground leading-tight text-balance tracking-tight">
          AI-powered SEO content.
          <br />
          <span class="bg-gradient-to-r from-primary to-primary-light bg-clip-text text-transparent">
            Right from your AI client.
          </span>
        </h1>

        <!-- Description -->
        <p class="mt-4 md:mt-6 text-base md:text-lg lg:text-xl text-muted-foreground">
          Generate keyword research, content strategies, and publish SEO-optimized blog posts directly from Claude Desktop, Cursor, or ChatGPT. No more context switching.
        </p>

        <!-- CTAs -->
        <div class="mt-6 md:mt-10 flex flex-wrap items-center gap-3 md:gap-4">
          <a href="https://app.suparank.io/signup" class="btn-primary">
            Get Started
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="https://app.suparank.io/docs" class="btn-secondary">
            View Docs
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column: Terminal -->
      <div class="relative">
        <div class="border border-border bg-card overflow-hidden">
          <!-- Terminal Header -->
          <div class="flex items-center gap-2 px-4 py-3 bg-muted border-b border-border">
            <div class="flex gap-2">
              <div class="w-3 h-3 bg-red-500/80"></div>
              <div class="w-3 h-3 bg-yellow-500/80"></div>
              <div class="w-3 h-3 bg-green-500/80"></div>
            </div>
            <span class="text-xs text-muted-foreground ml-2 font-mono">Terminal — npx suparank</span>
          </div>
          <!-- Terminal Content -->
          <div class="p-3 md:p-4 font-mono text-xs md:text-sm h-[300px] md:h-[400px] overflow-y-auto overflow-x-hidden scroll-smooth" id="terminal">
            <div id="terminal-content" class="space-y-2 break-words [word-break:break-word]">
              <!-- Content will be animated here -->
            </div>
            <span id="cursor" class="inline-block w-2 h-4 bg-primary animate-blink ml-1 align-middle"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Custom scrollbar for terminal */
  #terminal::-webkit-scrollbar {
    width: 8px;
  }

  #terminal::-webkit-scrollbar-track {
    background: transparent;
  }

  #terminal::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 4px;
  }

  #terminal::-webkit-scrollbar-thumb:hover {
    background: #444;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .animate-blink {
    animation: blink 1s infinite;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(4px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }

  .typing-line {
    overflow: hidden;
    white-space: nowrap;
    border-right: none;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  .tool-highlight {
    @apply text-primary;
  }

  .keyword-tag {
    @apply inline-block px-2 py-0.5 bg-primary/20 text-primary text-xs mr-2 mb-1;
  }

  .result-card {
    @apply bg-muted/50 border border-border p-3 mt-2;
  }
</style>

<script>
  // Ethereal background animation
  const hueRotateEl = document.getElementById('hue-rotate');
  let hueValue = 0;
  let etherealAnimationFrame: number;

  function animateEthereal() {
    hueValue = (hueValue + 0.5) % 360;
    if (hueRotateEl) {
      hueRotateEl.setAttribute('values', String(hueValue));
    }
    etherealAnimationFrame = requestAnimationFrame(animateEthereal);
  }

  // Start ethereal animation with reduced motion check
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    animateEthereal();
  }

  // Terminal animation
  const terminalContent = document.getElementById('terminal-content');
  const terminal = document.getElementById('terminal');
  const cursor = document.getElementById('cursor');

  let userScrolled = false;
  let lastScrollTop = 0;

  // Detect if user manually scrolled up
  terminal.addEventListener('scroll', () => {
    const isAtBottom = terminal.scrollHeight - terminal.scrollTop - terminal.clientHeight < 30;

    if (terminal.scrollTop < lastScrollTop && !isAtBottom) {
      // User scrolled up
      userScrolled = true;
    } else if (isAtBottom) {
      // User scrolled back to bottom
      userScrolled = false;
    }

    lastScrollTop = terminal.scrollTop;
  });

  const lines = [
    { type: 'command', text: '$ npx suparank', delay: 0 },
    { type: 'output', text: '', delay: 800 },
    { type: 'output', text: '<span class="text-primary font-semibold">Suparank MCP Server v1.0.0</span>', delay: 1000 },
    { type: 'output', text: 'Connected to project: <span class="text-foreground">my-tech-blog</span>', delay: 1200 },
    { type: 'output', text: '<span class="text-green-400">✓</span> Ready - Listening for MCP connections...', delay: 1500 },
    { type: 'output', text: '', delay: 2000 },
    { type: 'divider', text: '─'.repeat(50), delay: 2200 },
    { type: 'output', text: '', delay: 2400 },
    { type: 'label', text: '<span class="text-blue-400">Claude</span>', delay: 2600 },
    { type: 'user', text: 'Research keywords for "best project management tools for startups"', delay: 2800 },
    { type: 'output', text: '', delay: 3500 },
    { type: 'label', text: '<span class="text-primary">Suparank</span> <span class="text-muted-foreground text-xs">keyword_research</span>', delay: 3700 },
    { type: 'output', text: '<span class="text-muted-foreground">Analyzing search intent...</span>', delay: 4000 },
    { type: 'output', text: '<span class="text-muted-foreground">Fetching SERP data...</span>', delay: 4400 },
    { type: 'output', text: '<span class="text-muted-foreground">Calculating difficulty scores...</span>', delay: 4800 },
    { type: 'output', text: '', delay: 5200 },
    { type: 'result', text: `
      <div class="result-card">
        <div class="text-foreground font-medium mb-2">Keyword Research Results</div>
        <div class="space-y-2 text-xs">
          <div class="flex justify-between"><span>best project management tools</span><span class="text-green-400">Vol: 12,100</span><span class="text-yellow-400">KD: 45</span></div>
          <div class="flex justify-between"><span>project management software startups</span><span class="text-green-400">Vol: 2,400</span><span class="text-green-400">KD: 28</span></div>
          <div class="flex justify-between"><span>startup project management</span><span class="text-green-400">Vol: 1,900</span><span class="text-green-400">KD: 22</span></div>
          <div class="flex justify-between"><span>free project management tools</span><span class="text-green-400">Vol: 8,100</span><span class="text-yellow-400">KD: 52</span></div>
        </div>
        <div class="mt-3 pt-2 border-t border-border">
          <span class="text-muted-foreground text-xs">Search Intent:</span>
          <span class="keyword-tag">Commercial</span>
          <span class="keyword-tag">Comparison</span>
        </div>
      </div>
    `, delay: 5500 },
    { type: 'output', text: '', delay: 6500 },
    { type: 'label', text: '<span class="text-blue-400">Claude</span>', delay: 6800 },
    { type: 'user', text: 'Great! Now write an article targeting "project management software startups"', delay: 7000 },
    { type: 'output', text: '', delay: 7800 },
    { type: 'label', text: '<span class="text-primary">Suparank</span> <span class="text-muted-foreground text-xs">content_write</span>', delay: 8000 },
    { type: 'output', text: '<span class="text-muted-foreground">Generating outline...</span>', delay: 8300 },
    { type: 'output', text: '<span class="text-muted-foreground">Writing sections...</span>', delay: 8700 },
    { type: 'progress', text: '', delay: 9000 },
    { type: 'output', text: '', delay: 12000 },
    { type: 'result', text: `
      <div class="result-card">
        <div class="text-foreground font-medium mb-2">Article Generated</div>
        <div class="text-xs text-muted-foreground space-y-1">
          <div><span class="text-foreground">Title:</span> 10 Best Project Management Software for Startups in 2025</div>
          <div><span class="text-foreground">Words:</span> 2,847</div>
          <div><span class="text-foreground">Reading time:</span> 12 min</div>
          <div><span class="text-foreground">SEO Score:</span> <span class="text-green-400">94/100</span></div>
        </div>
        <div class="mt-2 flex gap-2">
          <span class="keyword-tag">H2: 8</span>
          <span class="keyword-tag">Images: 3</span>
          <span class="keyword-tag">Links: 12</span>
        </div>
      </div>
    `, delay: 12200 },
    { type: 'output', text: '', delay: 13500 },
    { type: 'label', text: '<span class="text-blue-400">Claude</span>', delay: 13800 },
    { type: 'user', text: 'Publish it to WordPress', delay: 14000 },
    { type: 'output', text: '', delay: 14600 },
    { type: 'label', text: '<span class="text-primary">Suparank</span> <span class="text-muted-foreground text-xs">publish_wordpress</span>', delay: 14800 },
    { type: 'output', text: '<span class="text-muted-foreground">Uploading images...</span>', delay: 15100 },
    { type: 'output', text: '<span class="text-muted-foreground">Creating post...</span>', delay: 15500 },
    { type: 'output', text: '<span class="text-green-400">✓</span> Published successfully!', delay: 16000 },
    { type: 'output', text: '<span class="text-muted-foreground">URL:</span> <span class="text-blue-400 underline">https://my-tech-blog.com/project-management-software-startups</span>', delay: 16300 },
    { type: 'output', text: '', delay: 17000 },
    { type: 'final', text: '<span class="text-green-400">✓</span> Workflow complete in <span class="text-foreground">47 seconds</span>', delay: 17500 },
  ];

  let currentLine = 0;
  let isTyping = false;

  function typeText(element, text, speed = 30) {
    return new Promise((resolve) => {
      let i = 0;
      isTyping = true;
      cursor.style.display = 'inline-block';

      function type() {
        if (i < text.length) {
          element.innerHTML += text.charAt(i);
          i++;
          scrollToBottom();
          setTimeout(type, speed);
        } else {
          isTyping = false;
          resolve();
        }
      }
      type();
    });
  }

  function scrollToBottom() {
    if (!userScrolled) {
      terminal.scrollTop = terminal.scrollHeight;
    }
  }

  function addLine(content, className = '') {
    const line = document.createElement('div');
    line.className = `animate-fadeIn ${className}`;
    line.innerHTML = content;
    terminalContent.appendChild(line);
    scrollToBottom();
  }

  function createProgressBar() {
    const container = document.createElement('div');
    container.className = 'animate-fadeIn';
    container.innerHTML = `
      <div class="flex items-center gap-2">
        <div class="flex-1 h-1 bg-muted overflow-hidden">
          <div id="progress-bar" class="h-full bg-primary transition-all duration-300" style="width: 0%"></div>
        </div>
        <span id="progress-text" class="text-xs text-muted-foreground">0%</span>
      </div>
    `;
    terminalContent.appendChild(container);
    scrollToBottom();

    // Animate progress
    let progress = 0;
    const interval = setInterval(() => {
      progress += Math.random() * 15 + 5;
      if (progress >= 100) {
        progress = 100;
        clearInterval(interval);
      }
      const bar = document.getElementById('progress-bar');
      const text = document.getElementById('progress-text');
      if (bar && text) {
        bar.style.width = `${progress}%`;
        text.textContent = `${Math.round(progress)}%`;
      }
    }, 400);
  }

  async function runAnimation() {
    for (const line of lines) {
      await new Promise(resolve => setTimeout(resolve, line.delay - (lines[currentLine - 1]?.delay || 0)));

      if (line.type === 'command') {
        const cmdLine = document.createElement('div');
        terminalContent.appendChild(cmdLine);
        await typeText(cmdLine, line.text, 50);
      } else if (line.type === 'user') {
        const userLine = document.createElement('div');
        userLine.className = 'text-foreground pl-4 border-l-2 border-blue-400/50';
        terminalContent.appendChild(userLine);
        await typeText(userLine, line.text, 25);
      } else if (line.type === 'label') {
        addLine(line.text, 'mt-1');
      } else if (line.type === 'divider') {
        addLine(`<span class="text-border">${line.text}</span>`);
      } else if (line.type === 'result') {
        addLine(line.text);
      } else if (line.type === 'progress') {
        createProgressBar();
      } else if (line.type === 'final') {
        addLine(`<div class="mt-2 pt-2 border-t border-border">${line.text}</div>`);
      } else {
        addLine(line.text);
      }

      currentLine++;
    }

    // Loop the animation after a pause (12 seconds)
    cursor.style.display = 'inline-block';
    await new Promise(resolve => setTimeout(resolve, 12000));
    terminalContent.innerHTML = '';
    currentLine = 0;
    userScrolled = false; // Reset scroll tracking for new loop
    runAnimation();
  }

  // Start animation when element is in view
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        runAnimation();
        observer.disconnect();
      }
    });
  }, { threshold: 0.3 });

  observer.observe(document.getElementById('terminal'));
</script>
