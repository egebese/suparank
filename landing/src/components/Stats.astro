---
const stats = [
  { value: '8', label: 'Claude Code Skills', description: 'Complete SEO toolkit' },
  { value: '5+', label: 'Integrations', description: 'WordPress, Ghost & more' },
  { value: '100%', label: 'Open Source', description: 'Free on GitHub' },
];
---

<section class="py-16 md:py-32 section-divider border-t border-border">
  <div class="container mx-auto px-6">
    <div class="max-w-[1280px] mx-auto border-x border-border">
      <div class="grid grid-cols-3">
        {stats.map((stat, index) => (
          <div class={`text-center px-4 md:px-8 py-6 md:py-10 ${index < 2 ? 'border-r border-border' : ''}`}>
            <div class="text-3xl sm:text-5xl md:text-6xl font-semibold text-foreground tracking-tight mb-1 md:mb-2">
              {stat.value}
            </div>
            <div class="text-xs md:text-sm font-medium text-primary mb-1">
              {stat.label}
            </div>
            <div class="text-xs md:text-sm text-muted-foreground hidden sm:block">
              {stat.description}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
