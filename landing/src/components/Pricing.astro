---
const features = [
  '8 Claude Code Skills',
  'WordPress & Ghost publishing',
  'Local-first architecture',
  'SEO research with seo-mcp',
  'AI image generation',
  'Schema markup generation',
  'GEO optimization',
  'Quality checks',
];

const installCommand = 'npx skills add egebese/suparank --global --all';
---

<section id="open-source" class="pt-10 md:pt-16 pb-16 md:pb-32 bg-muted/30 section-divider">
  <div class="container mx-auto px-6">
    <div class="text-center pb-10 md:pb-16 mb-10 md:mb-16 relative">
      <p class="text-sm font-medium text-primary mb-3 md:mb-4">Open Source</p>
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-semibold text-foreground tracking-tight mb-3 md:mb-4">
        Free & Open Source
      </h2>
      <p class="text-sm md:text-base text-muted-foreground">
        No pricing tiers, no subscriptions. Suparank is completely free and open source.
      </p>
      <!-- Divider after header -->
      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-screen h-px bg-border"></div>
    </div>

    <div class="max-w-sm mx-auto">
      <div class="relative bg-card border border-primary p-6 md:p-8">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2">
          <span class="px-3 py-1 text-xs font-medium bg-primary text-white">
            100% Free
          </span>
        </div>

        <div class="mb-6 text-center">
          <h3 class="font-medium text-foreground mb-1">Everything Included</h3>
          <p class="text-xs text-muted-foreground">All skills, no limits, forever free</p>
        </div>

        <div class="mb-6 text-center">
          <span class="text-4xl md:text-5xl font-semibold text-foreground tracking-tight">$0</span>
          <span class="text-sm text-muted-foreground ml-1">forever</span>
        </div>

        <ul class="space-y-3 mb-6">
          {features.map((feature) => (
            <li class="flex items-start gap-2 text-sm">
              <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-foreground">{feature}</span>
            </li>
          ))}
        </ul>

        <!-- Install command -->
        <div class="mb-4 bg-muted/50 border border-border p-3">
          <p class="text-xs text-muted-foreground mb-2">Install with one command:</p>
          <code class="text-xs text-foreground font-mono break-all">{installCommand}</code>
        </div>

        <div class="flex flex-col gap-2">
          <a
            href="https://github.com/egebese/suparank"
            target="_blank"
            rel="noopener noreferrer"
            class="block text-center py-3 px-4 text-sm font-medium bg-foreground text-background hover:bg-foreground/90 transition-colors"
          >
            <span class="inline-flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              View on GitHub
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
