---
const links = {
  product: [
    { label: 'Features', href: '/#features' },
    { label: 'GitHub', href: 'https://github.com/egebese/suparank' },
    { label: 'Install', href: 'https://github.com/egebese/suparank#installation' },
  ],
  tools: [
    { label: 'All Free Tools', href: '/tools' },
    { label: 'Free SEO Audit', href: '/tools/full-seo-audit' },
    { label: 'On-Page SEO Checker', href: '/tools/on-page-seo-checker' },
    { label: 'Accessibility Checker', href: '/tools/accessibility-checker' },
    { label: 'LLMs.txt Generator', href: '/tools/llms-txt-generator' },
    { label: 'Robots.txt Generator', href: '/tools/robots-txt-generator' },
    { label: 'Technical SEO Audit', href: '/tools/technical-seo-audit' },
    { label: 'Schema Generator', href: '/tools/schema-markup-generator' },
    { label: 'Core Web Vitals', href: '/tools/core-web-vitals-checker' },
    { label: 'Meta Tag Generator', href: '/tools/meta-tag-generator' },
    { label: 'Internal Link Checker', href: '/tools/internal-link-checker' },
    { label: 'Alt Text Checker', href: '/tools/alt-text-checker' },
  ],
  resources: [
    { label: 'Blog', href: '/blog' },
    { label: 'README', href: 'https://github.com/egebese/suparank#readme' },
    { label: 'Changelog', href: '/changelog' },
  ],
  company: [
    { label: 'Contact', href: '/contact' },
    { label: 'GitHub', href: 'https://github.com/egebese/suparank' },
    { label: 'X (Twitter)', href: 'https://x.com/egebese' },
  ],
};

const year = new Date().getFullYear();
---

<footer class="border-t border-border">
  <div class="max-w-[1280px] mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8 px-6 py-16">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center mb-3">
          <img src="/branding/logo-light.svg" alt="Suparank" class="h-6" />
        </a>
        <p class="text-sm text-muted-foreground">
          Open-source AI-powered SEO content creation.
        </p>
      </div>

      <!-- Product -->
      <div>
        <h4 class="text-sm font-medium text-foreground mb-3">Product</h4>
        <ul class="space-y-2">
          {links.product.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Free Tools -->
      <div>
        <h4 class="text-sm font-medium text-foreground mb-3">Free Tools</h4>
        <ul class="space-y-2">
          {links.tools.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="text-sm font-medium text-foreground mb-3">Resources</h4>
        <ul class="space-y-2">
          {links.resources.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-sm font-medium text-foreground mb-3">Company</h4>
        <ul class="space-y-2">
          {links.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="py-6 border-t border-border flex flex-col md:flex-row items-center justify-between gap-4 px-6">
      <p class="text-sm text-muted-foreground">
        &copy; {year} Suparank. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <a href="https://github.com/egebese/suparank" class="text-muted-foreground hover:text-foreground transition-colors" aria-label="GitHub">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
          </svg>
        </a>
        <a href="https://x.com/egebese" class="text-muted-foreground hover:text-foreground transition-colors" aria-label="X (Twitter)">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
