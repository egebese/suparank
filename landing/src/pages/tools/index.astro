    searchVolume: '4.2K/mo'
  },
  {
    id: 'schema-markup-generator',
    name: 'Schema Markup Generator',
    command: '/suparank-schema',
    description: 'Free JSON-LD schema generator and validator. Create Article, FAQ, HowTo, Product, and Organization structured data for Google rich results.',
    category: 'Technical',
    icon: 'ph-duotone ph-brackets-curly',
    features: ['JSON-LD generator', 'Schema.org validator', 'Rich results preview', 'FAQ schema creator', 'Article schema builder'],
    searchVolume: '1.4K/mo'
  },
  {
    id: 'core-web-vitals-checker',
    name: 'Core Web Vitals Checker',
    command: '/suparank-cwv',
    description: 'Test Core Web Vitals performance: LCP (Largest Contentful Paint), INP (Interaction to Next Paint), and CLS (Cumulative Layout Shift) with fix recommendations.',
    category: 'Performance',
    icon: 'ph-duotone ph-lightning',
    features: ['LCP analyzer', 'INP measurement', 'CLS detector', 'Page speed insights', 'Performance score'],
    searchVolume: '6.6K/mo'
  },
  {
    id: 'meta-tag-generator',
    name: 'Meta Tag Generator',
    command: '/suparank-meta',
    description: 'Free meta tag generator for SEO. Create optimized title tags, meta descriptions, Open Graph tags, Twitter Cards, and canonical URLs with live preview.',
    category: 'SEO',
    icon: 'ph-duotone ph-tag',
    features: ['Title tag optimizer', 'Meta description creator', 'Open Graph generator', 'Twitter Card builder', 'SERP preview'],
    searchVolume: '450/mo'
  },
  {
    id: 'internal-link-checker',
    name: 'Internal Link Checker',
    command: '/suparank-links',
    description: 'Free internal link checker and broken link detector. Analyze anchor text distribution, find orphan pages, check redirect chains, and audit external links.',
    category: 'SEO',
    icon: 'ph-duotone ph-link',
    features: ['Broken link finder', 'Internal link analyzer', 'Anchor text audit', 'Orphan page detector', 'Redirect chain checker'],
    searchVolume: '2.4K/mo'
  },
  {
    id: 'alt-text-checker',
    name: 'Image Alt Text Checker',
    command: '/suparank-images',
    description: 'Free alt text checker and image SEO audit tool. Validate alt attributes, check image file sizes, detect WebP/AVIF support, and verify lazy loading.',
    category: 'Performance',
    icon: 'ph-duotone ph-image',
    features: ['Alt text validator', 'Image size analyzer', 'WebP/AVIF checker', 'Lazy loading audit', 'Responsive image test'],
    searchVolume: '100/mo'
  }
];

const categories = ['All', 'Complete', 'SEO', 'Technical', 'Accessibility', 'Performance', 'AI SEO'];

// Schema.org - SEO optimized
const toolsCollectionSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Free SEO Audit Tools - On-Page Checker, Schema Generator, Core Web Vitals",
  "description": "11 free SEO tools: on-page SEO checker, WCAG accessibility tester, schema markup generator, Core Web Vitals checker, robots.txt generator, meta tag generator, internal link checker, and more.",
  "url": "https://suparank.io/tools",
  "publisher": {
    "@type": "Organization",
    "name": "Suparank",
    "url": "https://suparank.io"
  },
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": tools.map((tool, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": tool.name,
      "description": tool.description,
      "url": `https://suparank.io/tools/${tool.id}`
    }))
