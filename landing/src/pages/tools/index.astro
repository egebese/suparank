    description: 'Complete website SEO audit combining on-page analysis, technical SEO, Core Web Vitals, accessibility, and schema validation in one comprehensive report.',
    category: 'Complete',
    icon: 'ph-duotone ph-crosshair',
    features: ['On-page SEO checker', 'Technical site audit', 'Core Web Vitals test', 'WCAG accessibility scan', 'Schema validation'],
    searchVolume: '4.3K/mo',
    featured: true
  },
  {
    id: 'on-page-seo-checker',
    name: 'On-Page SEO Checker',
    command: '/suparank-onpage',
    description: 'Free on-page SEO analysis tool with 25+ checks. Analyze title tags, meta descriptions, heading structure, keyword density, and internal links like Ahrefs and Semrush.',
    category: 'SEO',
    icon: 'ph-duotone ph-chart-bar',
    features: ['Title tag analyzer', 'Meta description checker', 'H1-H6 heading audit', 'Keyword density analysis', 'Internal link checker'],
    searchVolume: '10K/mo'
  },
  {
    id: 'accessibility-checker',
    name: 'Website Accessibility Checker',
    command: '/suparank-a11y',
    description: 'Free WCAG 2.2 accessibility checker for Level AA compliance. Test color contrast ratios, alt text, keyboard navigation, ARIA labels, and ADA compliance.',
    category: 'Accessibility',
    icon: 'ph-duotone ph-wheelchair',
    features: ['WCAG 2.2 Level AA', 'Color contrast checker', 'Alt text validator', 'Keyboard navigation test', 'ARIA attribute audit'],
    searchVolume: '4K/mo'
  },
  {
    id: 'llms-txt-generator',
    name: 'LLMs.txt Generator',
    command: '/suparank-llms',
    description: 'Generate llms.txt and llms-full.txt files for AI search optimization. Help ChatGPT, Claude, and Perplexity discover and understand your content.',
    category: 'AI SEO',
    icon: 'ph-duotone ph-robot',
    features: ['llms.txt creator', 'llms-full.txt builder', 'AI crawler optimization', 'Content structure mapping', 'llmstxt.org compliant'],
    searchVolume: 'New'
  },
  {
    id: 'robots-txt-generator',
    name: 'Robots.txt Generator',
    command: '/suparank-robots',
