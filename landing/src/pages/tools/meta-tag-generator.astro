---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const tool = {
  id: 'meta-tag-generator',
  name: 'Meta Tag Generator',
  command: '/suparank-meta',
  description: 'Free meta tag generator for SEO. Create optimized title tags, meta descriptions, Open Graph tags, Twitter Cards, and canonical URLs with live preview.',
  longDescription: 'Generate SEO-optimized meta tags directly in your AI coding assistant. Create perfect title tags (50-60 chars), meta descriptions (120-160 chars with CTA), Open Graph tags for Facebook/LinkedIn, Twitter Cards for social sharing, and canonical URLs. Get SERP preview and social media preview.',
  category: 'SEO',
  icon: 'ph-duotone ph-tag'
};

const features = [
  { name: 'Title Tag Optimization', description: 'Generate SEO-optimized titles with proper length (50-60 chars) and keyword placement' },
  { name: 'Meta Description', description: 'Create compelling descriptions within 120-160 characters with call-to-action' },
  { name: 'Open Graph Tags', description: 'Generate og:title, og:description, og:image, og:type for social sharing' },
  { name: 'Twitter Cards', description: 'Create twitter:card, twitter:title, twitter:description, twitter:image tags' },
  { name: 'Canonical URLs', description: 'Set proper canonical tags to avoid duplicate content issues' },
  { name: 'Robots Directives', description: 'Configure index/noindex, follow/nofollow as needed' },
  { name: 'SERP Preview', description: 'See how your page will appear in Google search results' },
  { name: 'Social Preview', description: 'Preview Facebook, Twitter, and LinkedIn share cards' }
];

const faqs = [
  {
    question: 'What is the ideal title tag length for SEO?',
    answer: 'The ideal title tag length is 50-60 characters. Google typically displays up to 60 characters in search results before truncating. Keep titles concise, place important keywords near the beginning, and include your brand name at the end. Our generator automatically checks length and warns if titles are too long or too short.'
  },
  {
    question: 'How do I create Open Graph tags?',
    answer: 'Open Graph tags are meta tags that control how your content appears when shared on Facebook, LinkedIn, and other social platforms. Key tags include og:title, og:description, og:image, og:url, and og:type. Our generator creates all required Open Graph tags with proper formatting and validates image dimensions (1200x630px recommended).'
  },
  {
    question: 'What meta tags do I need for Twitter Cards?',
    answer: 'Twitter Cards require: twitter:card (summary or summary_large_image), twitter:title, twitter:description, and twitter:image. You can also add twitter:site for your Twitter username. Our generator creates both basic Twitter Cards and falls back to Open Graph tags when Twitter-specific tags are missing.'
  },
  {
    question: 'How long should my meta description be?',
    answer: 'Meta descriptions should be 120-160 characters. Google typically shows up to 160 characters on desktop and 120 on mobile. Include your target keyword naturally, add a compelling call-to-action, and make it enticing to click. Our generator validates length and provides a live SERP preview to see how it will appear in search results.'
  }
];

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Suparank Meta Tags Generator",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "Cross-platform",
  "description": tool.longDescription,
  "url": `https://suparank.io/tools/${tool.id}`,
  "author": {
    "@type": "Organization",
    "name": "Suparank"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const exampleOutput = `═══════════════════════════════════════════════════════════════════
