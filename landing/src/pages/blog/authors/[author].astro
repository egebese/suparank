---
import type { GetStaticPaths } from 'astro';
import { getCollection } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';
import PostCard from '../../../components/blog/PostCard.astro';
import { getPostsByAuthor } from '../../../lib/blog';

export const getStaticPaths: GetStaticPaths = async () => {
  const authors = await getCollection('authors');
  return authors.map((author) => ({
    params: { author: author.data.slug },
    props: { author },
  }));
};

const { author } = Astro.props;
const authorPosts = await getPostsByAuthor(author.data.slug);

const title = `${author.data.name} - Suparank Blog`;
const description = author.data.bio;

// Person Schema
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": author.data.name,
  "jobTitle": author.data.title,
  "description": author.data.bio,
  "image": `https://suparank.io${author.data.avatar}`,
  "url": `https://suparank.io/blog/authors/${author.data.slug}`,
  "sameAs": [
    author.data.twitter && `https://x.com/${author.data.twitter}`,
    author.data.linkedin && `https://linkedin.com/in/${author.data.linkedin}`,
    author.data.website,
  ].filter(Boolean),
};
---

<BlogLayout
  title={title}
  description={description}
  metaTitle={`${author.data.name} | Author at Suparank Blog`}
  metaDescription={description}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  </Fragment>

  <div class="container mx-auto px-6 py-12 md:py-16">
    <!-- Author Header -->
    <header class="mb-12 md:mb-16">
      <div class="flex flex-col md:flex-row md:items-start gap-6 md:gap-8">
        <img
          src={author.data.avatar}
          alt={author.data.name}
          class="w-24 h-24 md:w-32 md:h-32 rounded-full object-cover bg-muted border border-border"
        />
        <div class="flex-1">
          <span class="section-label mb-2 block">Author</span>
          <h1 class="text-3xl md:text-4xl font-semibold text-foreground mb-2">
            {author.data.name}
          </h1>
          <p class="text-lg text-primary mb-4">
            {author.data.title}
          </p>
          <p class="text-muted-foreground max-w-2xl mb-4">
            {author.data.bio}
          </p>

          <!-- Social Links -->
          <div class="flex gap-4">
            {author.data.twitter && (
              <a
                href={`https://x.com/${author.data.twitter}`}
                class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
                @{author.data.twitter}
              </a>
            )}
            {author.data.linkedin && (
              <a
                href={`https://linkedin.com/in/${author.data.linkedin}`}
                class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            )}
            {author.data.website && (
              <a
                href={author.data.website}
                class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Website
              </a>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Author's Posts -->
    <section>
      <h2 class="text-xl font-semibold text-foreground mb-6">
        Articles by {author.data.name}
        <span class="text-muted-foreground font-normal text-base ml-2">
          ({authorPosts.length})
        </span>
      </h2>

      {authorPosts.length > 0 ? (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
          {authorPosts.map((post) => (
            <PostCard post={post} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12 border border-border rounded-sm">
          <p class="text-muted-foreground">No articles yet.</p>
        </div>
      )}
    </section>
  </div>
</BlogLayout>
