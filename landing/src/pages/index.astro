---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import LogoCloud from '../components/LogoCloud.astro';
import Features from '../components/Features.astro';
// import TestimonialsGrid from '../components/TestimonialsGrid.astro'; // TODO: Uncomment when testimonials are available
import Pricing from '../components/Pricing.astro';
import FAQ from '../components/FAQWrapper.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

// Schema.org structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Suparank",
  "url": "https://suparank.io",
  "logo": "https://suparank.io/branding/logo-light.png",
  "description": "AI-powered SEO content automation platform using Model Context Protocol (MCP)",
  "founder": {
    "@type": "Person",
    "name": "Ege Bese",
    "url": "https://x.com/egebese"
  },
  "sameAs": [
    "https://x.com/suparankHQ",
    "https://github.com/suparank",
    "https://www.linkedin.com/in/egebese"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "email": "hello@suparank.io",
    "contactType": "customer support"
  }
};

const webSiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Suparank",
  "url": "https://suparank.io",
  "description": "AI-powered SEO content automation. Write, optimize, and publish blog posts directly from Claude, ChatGPT, or Cursor using MCP.",
  "publisher": {
    "@type": "Organization",
    "name": "Suparank"
  }
};

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Suparank",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Cross-platform (via npm)",
  "description": "MCP tool that connects AI assistants to SEO content workflows. Research keywords, write optimized articles, and publish to WordPress or Ghost.",
  "url": "https://suparank.io",
  "downloadUrl": "https://www.npmjs.com/package/suparank",
  "softwareVersion": "1.0.0",
  "author": {
    "@type": "Organization",
    "name": "Suparank"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Free tier available"
  },
  "featureList": [
    "19 MCP tools for SEO content workflows",
    "Direct WordPress and Ghost CMS publishing",
    "Keyword research and topical authority planning",
    "Brand voice training",
    "AI image generation with fal.ai"
  ]
};
---

<Layout title="Suparank - AI-powered SEO content creation with MCP">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(webSiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
  </Fragment>
  <Header />
  <main>
    <Hero />
    <LogoCloud />
    <Features />
    <!-- <TestimonialsGrid /> -->
    <Pricing />
    <FAQ />
    <CTA />
  </main>
  <Footer />
</Layout>
