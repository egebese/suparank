---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Server Error | Suparank"
  description="Something went wrong on our end. Please try again later."
>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>
  <Header />
  <main class="pt-16 min-h-[60vh] flex items-center justify-center">
    <div class="text-center px-6 py-16">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-red-500/30 mb-6">
        <span class="text-sm font-medium text-red-400 uppercase tracking-wider">500 Error</span>
      </div>

      <!-- Heading -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-foreground mb-4">
        Server error
      </h1>

      <!-- Description -->
      <p class="text-base md:text-lg text-muted-foreground max-w-md mx-auto mb-8">
        Something went wrong on our end. Please try again later or contact us if the problem persists.
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary">
          Back to home
        </a>
        <a href="/contact" class="btn-secondary">
          Contact support
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
