---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface ChangelogEntry {
  version: string;
  date: string;
  title: string;
  description: string;
  changes: {
    type: 'feature' | 'improvement' | 'fix' | 'breaking';
    text: string;
  }[];
}

const changelog: ChangelogEntry[] = [
  {
    version: '2.0.0',
    date: 'February 2026',
    title: 'Claude Code Skills — Open Source Release',
    description: 'Suparank has been completely rewritten as free, open-source Claude Code Skills. No dashboard or account required.',
    changes: [
      { type: 'breaking', text: 'Migrated from MCP SaaS to open-source Claude Code Skills' },
      { type: 'feature', text: '8 skills: /suparank, /suparank/setup, /suparank/pipeline, /suparank/research, /suparank/create, /suparank/optimize, /suparank/publish, /suparank/session' },
      { type: 'feature', text: 'Now completely free and open source' },
      { type: 'feature', text: 'No dashboard or account required — everything runs locally' },
      { type: 'feature', text: 'Install with: npx skills add egebese/suparank --global --all' },
      { type: 'feature', text: 'Optional seo-mcp integration for real Ahrefs keyword data' },
    ],
  },
  {
    version: '1.0.0',
    date: 'January 2026',
    title: 'Initial Release (Legacy MCP)',
    description: 'The first public release of Suparank as a paid MCP SaaS. Superseded by v2.0.0 open-source Claude Code Skills.',
    changes: [
      { type: 'feature', text: '19 MCP tools for complete content workflow' },
      { type: 'feature', text: 'Keyword research with difficulty analysis' },
      { type: 'feature', text: 'Topical map and content calendar generation' },
      { type: 'feature', text: 'AI-powered content writing with SEO optimization' },
      { type: 'feature', text: 'Image prompt generation and fal.ai integration' },
      { type: 'feature', text: 'Schema markup generation' },
      { type: 'feature', text: 'WordPress and Ghost publishing' },
      { type: 'feature', text: 'Webhook support for custom integrations' },
      { type: 'feature', text: 'Session management for multi-step workflows' },
      { type: 'feature', text: 'Web dashboard for project configuration' },
    ],
  },
];

const typeColors = {
  feature: 'bg-green-500/10 text-green-400 border-green-500/20',
  improvement: 'bg-blue-500/10 text-blue-400 border-blue-500/20',
  fix: 'bg-orange-500/10 text-orange-400 border-orange-500/20',
  breaking: 'bg-red-500/10 text-red-400 border-red-500/20',
};

const typeLabels = {
  feature: 'Feature',
  improvement: 'Improvement',
  fix: 'Fix',
  breaking: 'Breaking',
};

// Schema.org WebPage
const webPageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Suparank Changelog",
  "description": "See what's new in Suparank. Latest updates, features, improvements, and release notes.",
  "url": "https://suparank.io/changelog",
  "dateModified": "2026-02-23",
  "publisher": {
    "@type": "Organization",
    "name": "Suparank",
    "url": "https://suparank.io"
  }
};
---

<Layout title="Changelog | Suparank - Latest Updates & Features" description="See what's new in Suparank. Latest updates, features, improvements, and release notes for the AI-powered SEO content platform.">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(webPageSchema)} />
  </Fragment>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-24 md:pt-32 pb-10 md:pb-16 section-divider">
      <div class="container mx-auto px-6">
        <div class="text-center pb-10 md:pb-16 relative">
          <p class="text-sm font-medium text-primary mb-3 md:mb-4">Changelog</p>
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-foreground tracking-tight mb-3 md:mb-4">
            What's New
          </h1>
          <p class="text-base md:text-lg text-muted-foreground max-w-md mx-auto">
            The latest updates, features, and improvements to Suparank.
          </p>
          <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-screen h-px bg-border"></div>
        </div>
      </div>
    </section>

    <!-- Changelog Entries -->
    <section class="pb-16 md:pb-32">
      <div class="container mx-auto px-6">
        <div class="max-w-[1280px] mx-auto border-x border-border">
          {changelog.map((entry, index) => (
            <div class:list={['grid md:grid-cols-[200px_1fr]', index !== changelog.length - 1 && 'border-b border-border']}>
              <!-- Date Column -->
              <div class="p-6 md:p-8 md:border-r border-border">
                <div class="sticky top-24">
                  <span class="inline-block px-2 py-1 text-xs font-mono bg-primary/10 text-primary border border-primary/20 mb-2">
                    v{entry.version}
                  </span>
                  <p class="text-sm text-muted-foreground">{entry.date}</p>
                </div>
              </div>

              <!-- Content Column -->
              <div class="p-6 md:p-8 border-t md:border-t-0 border-border">
                <h2 class="text-xl font-semibold text-foreground mb-2">{entry.title}</h2>
                <p class="text-sm text-muted-foreground mb-6">{entry.description}</p>

                <ul class="space-y-3">
                  {entry.changes.map((change) => (
                    <li class="flex items-start gap-3">
                      <span class:list={['inline-flex items-center px-2 py-0.5 text-xs font-medium border', typeColors[change.type]]}>
                        {typeLabels[change.type]}
                      </span>
                      <span class="text-sm text-muted-foreground">{change.text}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}

          <!-- Subscribe Section -->
          <div class="p-6 md:p-8 border-t border-border">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
              <div>
                <h3 class="text-sm font-medium text-foreground mb-1">Stay Updated</h3>
                <p class="text-sm text-muted-foreground">
                  Follow us on X for the latest updates and announcements.
                </p>
              </div>
              <a
                href="https://x.com/egebese"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium bg-card border border-border text-foreground hover:bg-muted transition-colors"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
                Follow @egebese
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
